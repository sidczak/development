{% extends 'ApplicationToolsBundle::layout12.html.twig' %}

{% block title %}Slider Bootstrap{% endblock %}

{% block stylesheets %}    
    <link href="{{ asset('bundles/applicationtools/css/bootstrap/carousel.css') }}" rel="stylesheet" type="text/css" media="all" />
{% endblock %}

{% block javascripts %}
